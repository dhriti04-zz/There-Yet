<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvEmail"
        android:layout_centerVertical="true"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_texts"
        android:ems="10"
        android:layout_above="@id/tvPassword"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tvPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_texts"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnSignup"
        android:layout_marginStart="53dp"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="103dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/buttons"
        android:text="Sign up"
        android:layout_toRightOf="@id/btnLogin"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="5dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="251dp"
        android:layout_height="127dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/mono" />

</RelativeLayout>